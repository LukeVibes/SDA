package edu.carleton.comp4601.resources;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import javax.ws.rs.core.Context;
import javax.ws.rs.core.Request;
import javax.ws.rs.core.UriInfo;

public class DocGroupAction {
	//Default stuff we assume we need...
		@Context
		UriInfo uriInfo;
		@Context
		Request request;
		
		String rawTags;
		List<String> organizedTags;
		String action;
		
	//Constructor
	public DocGroupAction(UriInfo uriInfo, Request request, String tags, String action) {
		this.uriInfo = uriInfo;
		this.request = request;
		this.rawTags = tags;
		this.action  = action;
		
		this.organizedTags = organizeRawtags(rawTags);
	}
	
	//Cleans tags into list of tags
	public List<String> organizeRawtags(String r) {
		List<String> elegantList = Arrays.asList(r.split(","));
		return elegantList;
	}
	
	

}
