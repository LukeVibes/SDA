package edu.carleton.comp4601.resources;

import java.util.ArrayList;
import java.util.Arrays;

import javax.ws.rs.core.Context;
import javax.ws.rs.core.Request;
import javax.ws.rs.core.UriInfo;

public class DocGroupAction {
	//Default stuff we assume we need...
		@Context
		UriInfo uriInfo;
		@Context
		Request request;
		
		String rawTags;
		String organizedTags;
		
	public DocGroupAction(UriInfo uriInfo, Request request, String tags) {
		this.uriInfo = uriInfo;
		this.request = request;
		this.rawTags = tags;
		
		this.organizedTags = organizeRawtags(rawTags);
	}
	
	public ArrayList<String> organizeRawtags(String r) {
		ArrayList<String> elegantList = Arrays.asList(r.split(","));
		return elegantList;
	}

}
